.wrapper
  = render "header"
  .wrapper__breadcrumb
    - breadcrumb :identification
    = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "breadcrumbs-list"
  .identification-content
    .identification-chapter-container
      .identification-chapter-head 本人情報の登録
      .identification-single-inner
        %p
          お客さまの本人情報をご登録ください。
          %br
          登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
        .text-right
          = link_to "", class: "underline-opacity" do
            %span 本人確認書類のアップロードについて
            = icon "fas", "angle-right "
        .identification-form-group
          %label お名前
          %p
          =@user.family_name + @user.first_name
        .identification-form-group
          %label お名前カナ
          %p 
          =@user.family_name_kana + @user.first_name_kana
        .identification-form-group
          %label 生年月日
          %p 2019/08/25
        .identification-form-group
          %label 郵便番号
          %span.form-arbitrary 任意
          = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）123-4567"
        .identification-form-group
          %label 都道府県
          %span.form-arbitrary 任意
          .identification-select-wrap
            = select "prefecture", "", ["--", "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県",], {} ,{class: "identification-input"}
            = icon "fas", "angle-down 2x"
        .identification-form-group
          %label 市区町村
          %span.form-arbitrary 任意
          = text_field_tag "city", "", class: "identification-input", placeholder: "例) 大阪市"
        .identification-form-group
          %label 番地
          %span.form-arbitrary 任意
          = text_field_tag "adress1", "", class: "identification-input", placeholder: "例) 中央区難波5-1-60"
        .identification-form-group
          %label 建物名
          %span.form-arbitrary 任意
          = text_field_tag "adress2", "", class: "identification-input", placeholder: "例) なんばスカイオ"
        .identification-form-group
          = button_to "登録する", "", class: "btn-default btn-red"
          .identification-form-group.text-right
            = link_to "", class: "underline-opacity" do
              %span 本人情報の登録について  
              = icon "fas", "angle-right"
    =render "sidebar"        
  = render "footer"
  = render "exhibit"