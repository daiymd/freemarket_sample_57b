.contents
  = render "shared/logoheader"
  .contents__main
    .contents__main_block
      .contents__main_block-text 商品の情報を入力
      .contents__main_block_form
        .contents__main_block_form-image
          .contents__main_block_form-image_upload
            .contents__main_block_form-image_upload-text 出品画像
            .focus 必須
          %p 最大１０枚までアップロードできます
          .contents__main_block_form-image_images
            = icon 'fas', 'camera', class: 'icon'
            .contents__main_block_form-image_images-text ドラッグアンドドロップまたはクリックしてファイルをアップロード
            = file_field_tag :image, class: 'images', multiple: true
        .contents__main_block_form-name
          .product_name
            .product_name-text 商品名
            .focus 必須
          .product_name-form
            = text_field_tag "name", "" ,class: 'input_name', placeholder: "商品名（必須 40文字まで)"
          .product_description
            .product_description-text 商品の説明
            .focus 必須
          .product_description-form
            = text_area_tag "name", "" , class: 'input_description', rows: "5", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
        .contents__main_block_form-detail
          .text 商品の詳細
          .detail_box
            .detail_box-category
              .detail_box-category-text カテゴリー
              .focus 必須
            .selects
              = select "category", "", ["--", "レディース", "メンズ", "ベビー・キッズ", "インテリア・住まい・小物", "本・音楽・ゲーム", "おもちゃ・ホビー・グッズ", "コスメ・香水・美容", "家電・スマホ・カメラ", "スポーツ・レジャー", "ハンドメイド", "チケット", "自動車・オートバイ", "その他"], {} ,{class: "selection"}
              = icon "fas", "angle-down 2x", class: 'down'
            .detail_box-state
              .detail_box-state-text 商品の状態
              .focus 必須
            .selects
              = select "state", "", ["--", "レディース", "メンズ", "ベビー・キッズ", "インテリア・住まい・小物", "本・音楽・ゲーム", "おもちゃ・ホビー・グッズ", "コスメ・香水・美容", "家電・スマホ・カメラ", "スポーツ・レジャー", "ハンドメイド", "チケット", "自動車・オートバイ", "その他"], {} ,{class: "selection"}
              = icon "fas", "angle-down 2x", class: 'down'
        .contents__main_block_form-about
          .text 配送について
          = link_to "" do
            ?
          .about_box
            .about_box-burden
              .about_box-burden-text 配送料の負担
              .focus 必須
            .selects
              = select "burden", "", ["--", "送料込み(出品者負担)", "着払い(購入者負担)"], {} ,{class: "selection"}    
              = icon "fas", "angle-down 2x", class: 'down'
            .about_box-region
              .about_box-region-text 発送元の地域
              .focus 必須
            .selects 
              = select "region", "", ["--", "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県",], {} ,{class: "selection"}
              = icon "fas", "angle-down 2x", class: 'down'
            .about_box-day 
              .about_box-day-text 発送までの日数
              .focus 必須
            .selects
              = select "day", "", ["--", "1~2日で発送", "2~3日で発送", "4~7日で発送"], {} ,{class: "selection"}    
              = icon "fas", "angle-down 2x", class: 'down'
        .contents__main_block_form-price
          .text 販売価格(300〜9,999,999)
          = link_to "" do
            ?
          .price_box
            .price_box-price
              .left
                .left-text 価格
                .focus 必須
              .right
                .right-text ¥  
                .right-form
                  = text_field_tag "price", "" ,class: 'input_price', placeholder: "例）300"
            .price_box-fee
              .left 販売手数料 (10%)
              .right -
            .price_box-profit
              .left 販売利益
              .right -
        .contents__main_block_form-confirm
          %p
            = link_to "" do
              禁止されている出品
            、
            = link_to "" do
              行為
            を必ずご確認ください。
          %p
            またブランド品でシリアルナンバー等がある場合はご記載ください。
            = link_to "" do
              偽ブランドの販売
            は犯罪であり処罰される可能性があります。
          %p
            また、出品をもちまして
            = link_to "" do
              加盟店規約
            に同意したことになります。
          %button.confirm 出品する
          %button.back 戻る           

  =render "shared/logofooter"