= render "shared/logoheader"
.address-container
  .address-container__header
    住所入力
  %form.address-container__content
    .address-container__content__form-group
      %label お名前
      %span.form-required 必須
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）山田"
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）彩"
    .address-container__content__form-group
      %label お名前カナ
      %span.form-required 必須
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）ヤマダ"
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）アヤ"
    .address-container__content__form-group
      %label 郵便番号
      %span.form-required 必須
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）123-4567"
    .address-container__content__form-group
      %label 都道府県
      %span.form-required 必須
      .identification-select-wrap
        = select "prefecture", "", ["--", "北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県",], {} ,{class: "identification-input"}
        = fa_icon "angle-down 2x"
    .address-container__content__form-group
      %label 市区町村
      %span.form-required 必須
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）横浜市緑区"
    .address-container__content__form-group
      %label 番地
      %span.form-required 必須
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）青山1-1-1"
    .address-container__content__form-group
      %label 建物名
      %span.form-arbitrary 任意
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）柳ビル103"
    .address-container__content__form-group
      %label 電話
      %span.form-arbitrary 任意
      = text_field_tag "zip-name", "", class: "identification-input", placeholder: "例）09012345678"
  %button.address-container__btn-next{class:"address-btn", type:"submit"} 次へ進む
