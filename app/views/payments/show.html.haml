.wrapper
  = render "users/header"
  .wrapper__breadcrumb
    - breadcrumb :card
    = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "breadcrumbs-list"
  .identification-content
    -if current_user.payment
      .credit__container
        %h2.chapter__header 支払い方法
        .credit__container-inner
          %section
            %h3.credit__container-inner-content クレジットカード一覧
          %section.user__card
            = form_with url:delete_payments_path, method: :post, id: 'charge-form',  name: "inputForm" do
              %input{ type: "hidden", name: "card_id", value: "" }
              %button.deleate 削除する
            .user__card-info
              %span.image
              %img{src: "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2394192159 ", width: "49", height: "15"}
              %br
              = "**** **** ****" + @default_card_information.last4
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
          %section
            = link_to '/', class: "payment__box-content" do
              %span 支払い方法について
    -if current_user.payment == nil
      .credit__container
        %h2.chapter__header 支払い方法
        %h3.credit__container-inner-content クレジットカード一覧
        .logout-box
          .logout-box__btn
            = link_to "new",{ controller: "payments", action: "show", class:"btn-default btn-red"} do
              クレジットカードを登録する
    =render "users/sidebar"        
  = render "users/footer"
  = render "users/exhibit"   